{% extends 'base.html.twig' %}

{% block title %}Qrcode{% endblock %}

{% block body %}
    <h1>Qrcode</h1>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <img src="{{ qrcodeSvg }}" alt="QR Code" height="300" width="300" class="card-img-top mb-3">

                    </div>
                    <h5 class="card-title">{{ qrcode.description }}</h5>
                    <p class="card-text">
                        <strong>URL: </strong>
                        <a href="{{ qrcode.data }}" target="_blank">{{ qrcode.data }}</a>
                    </p>
                    <hr>
                    <div class="tags">
                        <p><strong>Tags:</strong></p>
                        {% for tag in qrcode.tags %}
                            <span class="badge bg-primary me-1">{{ tag.name }}</span>
                        {% endfor %}

                    </div>
                    <div class="category mt-3">
                        <p><strong>Category:</strong> {{ qrcode.category ? qrcode.category.name : 'Not specified' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_qrcode_index') }}">back to list</a>

    <a href="{{ path('app_qrcode_edit', {'id': qrcode.id}) }}">edit</a>

    {{ include('qrcode/_delete_form.html.twig') }}
{% endblock %}
